<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bacc"
    android:padding="20dp">

    <Button

        android:text=">"
        android:background="@drawable/nextpage_button"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="300dp"/>

    <ImageView
        android:onClick="nextpaperClick"
        android:layout_marginTop="50dp"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="#0045FF"
        android:background="@drawable/logo"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <TextView
        android:layout_margin="20dp"
        android:layout_gravity="center_horizontal"
        android:text="coming with me !"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_marginLeft="40dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:background="@drawable/user"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <EditText
            android:textColorHint="#d9d9d9"
            android:textColor="#434343"
            android:ems="10"
            android:layout_marginLeft="10dp"
            android:background="#ffffff"
            android:inputType="text"
            android:hint="accunt"
            android:layout_width="200dp"
            android:layout_height="40dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:background="@drawable/key"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <EditText
            android:textColorHint="#d9d9d9"
            android:textColor="#434343"
            android:ems="10"
            android:layout_marginLeft="10dp"
            android:background="#ffffff"
            android:inputType="numberPassword"
            android:hint="password"
            android:layout_width="200dp"
            android:layout_height="40dp" />
    </LinearLayout>

    <Button
        android:textColor="#a4c2f4"
        android:textSize="25sp"
        android:background="@drawable/sigin_button"
        android:textAllCaps="false"
        android:text="sigin"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginRight="60dp"
        android:layout_marginLeft="90dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginTop="70dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <Button
            android:layout_marginRight="5dp"
            android:background="@drawable/bottom_button"
            android:text="不记得密码了"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:layout_marginLeft="5dp"
            android:background="@drawable/bottom_button"
            android:text="没有账号/注册一个"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>
