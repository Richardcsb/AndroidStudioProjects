<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:onClick="tobeginOnClick"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="#434343"
        android:background="@drawable/title_style"
        android:textAllCaps="false"
        android:text="登录"
        android:id="@+id/title_button1"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:onClick="fruitsOnClick"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="#434343"
        android:background="@drawable/title_style"
        android:textAllCaps="false"
        android:text="水果1"
        android:id="@+id/title_button2"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:onClick="recyclerfruitOnClick"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="#434343"
        android:background="@drawable/title_style"
        android:textAllCaps="false"
        android:text="水果2"
        android:id="@+id/title_button3"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:layout_marginRight="10dp"
        android:layout_marginLeft="5dp"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="#434343"
        android:background="@drawable/title_style"
        android:textAllCaps="false"
        android:text=""
        android:id="@+id/title_button4"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>